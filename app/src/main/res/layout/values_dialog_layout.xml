<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/all_rounded_dialog"
    android:padding="12dp"
    android:id="@+id/cl_root">

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dose_value"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/iv_input"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintRight_toRightOf="parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gray"/>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lt_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_head"/>

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_divider"
        android:hint="@string/value"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:inputType="number"
        android:imeOptions="actionDone"/>

    <LinearLayout
        android:id="@+id/llv_numbers"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_divider"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llh_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/et_input"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="1"
                android:textColor="@color/black" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="2"
                android:textColor="@color/black" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="3"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llh_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llh_row1"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="4"
                android:textColor="@color/black" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="5"
                android:textColor="@color/black" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="6"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llh_row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llh_row2"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="7"
                android:textColor="@color/black" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="8"
                android:textColor="@color/black" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/light_blue"
                android:clickable="true"
                android:fontFamily="@font/roboto_bold"
                android:foreground="?android:attr/selectableItemBackground"
                android:tag="dose_value_button"
                android:text="9"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>